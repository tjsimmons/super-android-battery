<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tjsimmons.SuperAndroidBattery"
    android:versionCode="142"
    android:versionName="1.4.2" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="7" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <supports-screens />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        
        <!-- activities -->
        <activity android:name=".SuperAndroidMainActivity">
            <intent-filter>
    		    <action android:name="android.intent.action.MAIN" />
	        	<category android:name="android.intent.category.LAUNCHER" />
    		</intent-filter>
        </activity>
        
        <activity android:name=".WidgetPreferencesActivity">
	        <intent-filter>
        		<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
    		</intent-filter>
	    </activity>
	    
        <activity android:name=".WallpaperListActivity">
            
        </activity>
	    
        <!-- widgets -->
	    <receiver android:name=".BatteryWidgetProvider_2x1" android:label="@string/battery_widget_2x1" >
	    	<intent-filter>
	        	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
	    	</intent-filter>
	    	
	    	<meta-data android:name="android.appwidget.provider" android:resource="@xml/battery_widget_2x1" />
		</receiver>
		
	    <receiver android:name=".BatteryWidgetProvider_1x1" android:label="@string/battery_widget_1x1" >
	    	<intent-filter>
	        	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
	    	</intent-filter>
	    	
	    	<meta-data android:name="android.appwidget.provider" android:resource="@xml/battery_widget_1x1" />
		</receiver>
		
	    <!-- update service -->
	    <service android:name=".BatteryUpdateService"></service>
	    
	    <receiver android:name=".BootCompletedReceiver">
	        <intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.HOME" />
			</intent-filter>
	    </receiver>
	    
	</application>
</manifest>