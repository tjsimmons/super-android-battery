<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tjsimmons.GameBatteryMeter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
		
		<activity android:name=".BatteryActivity">
		</activity>
        
	    <receiver android:name=".GameBatteryMeterWidgetProvider" android:label="@string/app_name" >
	    	<intent-filter>
	        	<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
	    	</intent-filter>
	    	<meta-data android:name="android.appwidget.provider"
	               android:resource="@xml/meter_appwidget_provider" />
		</receiver>
	</application>

</manifest>